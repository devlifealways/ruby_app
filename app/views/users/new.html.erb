<% content_for :head do %>
<%= stylesheet_link_tag 'css/signin'%>
<% end %>
<div class="well well-lg pretty-form">
  <%= form_for @user,:html=>{:class=>"form-signin space"} do |form| %>
  <%= render 'shared/error_messages' %>
  <fieldset>
    <legend style="font-size:2.5em">Please sign in</legend>
    <%= div_for @user,:class=>"form-group" do %>
    <%= form.label :name,:for=>:name %>
    <%= form.text_field :name,:class=>"form-control",
    :required=>true,
    :autofocus=>true,
    :placeholder=>"Tape here your name please ...."
    %>
    <% end %>

    <%= div_for @user,:class=>"form-group" do %>
    <%= form.label :email,:for=>"sr-only"%>
    <%= form.email_field :email,
    :class=>"form-control",
    :required=>true,
    :placeholder=>"Tape here your email please ...."
    %>
    <% end %>

    <!-- password section that's all -->
    <%= div_for @user,:class=>"form-group" do %>
    <%= form.label :password,:for=>"sr-only" %>
    <%= form.password_field :password,:class=>"form-control field_with_errors",:require=>true,:placeholder=>"password ..." %>
    <% end %>

    <!-- password confirmation -->
    <%= div_for @user,:class=>"form-group" do %>
    <%= form.label :password_confirmation,:for=>"sr-only" %>
    <%= form.password_field :password_confirmation,
    :class=>"form-control",
    :require=>true,
    :placeholder=>"password confirmation ..." %>
    <% end %>
    <%= form.submit "Sign up !",
    :class=>"btn btn-lg btn-primary btn-block" %>
    <% end %>
  </fieldset>
</div>
