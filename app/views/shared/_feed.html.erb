<% if !@feed_items.nil? %>
<%= will_paginate @feed_items %>
<% @feed_items.each do |micropost| %>
<!-- new one -->
<div class="media" style="padding:1%;">
  <div class="media-left">
    <a href="<%= user_path current_user %>">
      <%= gravatar_for current_user,:class=>"media-object img img-circle",:style=>"margin-top:2%;",:size=>40 %>
    </a>
  </div>
  <div class="media-body">
    <h4 class="media-heading" style="color:white;font-weight:bold;">
      Posted <%= time_ago_in_words micropost.created_at %> ago
      <% link_to micropost,:method => :delete,
      :confirm => "Are you sure ?",
      :title => micropost.content,
      :style=>"color:white;" do %>
      <span class="glyphicon glyphicon-remove pull-right"></span>
      <% end %>
    </h4>
    <%= micropost.content %>
    <hr>
  </div>
</div>
<!-- new one  -->
<% end %>
<%= will_paginate @feed_items %>
<% end %>
